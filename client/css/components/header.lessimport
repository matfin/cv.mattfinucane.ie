header {
	
	width: 100%;	
	margin-bottom: @gridColumnWidth;
	padding: 0 @gridColumnWidth;
	.box-sizing(border-box);

	h1 {
		line-height: @gridColumnWidth * 3;
		height: @gridColumnWidth * 3;
		float: left;
	}

	address {
		clear: both;
		margin-bottom: @gridColumnWidth / 4;
		@media @hd {
			font-size: 0.9em;
		}
		@media @desktop {
			font-size: 0.9em;
		}
	}
	span {
		margin: 0 @gridColumnWidth / 4;
	}
	a {
		@media @hd {
			font-size: 0.9em;
		}
		@media @desktop {
			font-size: 0.9em;
		}
	}

	button.nav {
		display: none;
	}

	nav {
		margin-top: @gridColumnWidth;
		margin-left: @gridColumnWidth * 4;
		float: left;
		ol {
			li {
				display: inline;
				a {
					margin: 0 @gridColumnWidth / 4;
					font-size: @h1Size;
					font-weight: bold;
					border-bottom: none;
					padding-bottom: 0;

					line-height: @gridColumnWidth * 3;
					height: @gridColumnWidth * 3;

					.transition-duration(300ms);
					.transition-property(border);

					&:hover {
						border-bottom: 5px solid;
					}
				}
			}
		}
	}

	@media @mobile {
		.resetMarginPadding;
		h1 {
			.resetMarginPadding;
			padding-left: @gridColumnWidth;
			width: 80%;
			.box-sizing(border-box);
			background-color: @colourDark;
			color: @colourLight;
		}

		address, > a {
			margin: @gridColumnWidth;
			margin-right: 0;
			margin-top: @gridColumnWidth * 1.5;
			margin-bottom: @gridColumnWidth / 2;
			&:last-child {
				margin-left: 0;
			}
		}
		span {
			// display: none;
		}

		button.nav {
			position: relative;
			z-index: 3;
			width: 20%;
			display: block;
			height: @gridColumnWidth * 3;
			line-height: @gridColumnWidth * 3;
			background-color: @colourDark;
			color: @colourLight;
			
			&:active {
				.scale(1);
			}

		}
		nav {
			.resetMarginPadding;
			z-index: 4;
			position: absolute;
			top: @gridColumnWidth * 3.5;
			left: 0;
			width: 100%;
			height: 0;
			overflow: hidden;
			background-color: @colourLight;

			.transition-property(height);
			.transition-duration(@transitionDuration / 2);

			ol {
				li {
					display: block;
					width: 100%;
					a {
						.resetMarginPadding;
						display: block;
						width: 100%;
						height: @gridColumnWidth * 3;
						line-height: @gridColumnWidth * 3;
						float: left;
						padding-right: @gridColumnWidth;
						text-align: right;
						font-size: 1.0em;
						.box-sizing(border-box);

						&:hover {
							border-bottom: none;
						}
					}
				}
			}

			&.revealed {
				height: @gridColumnWidth * 9;
			}
		}
	}
}